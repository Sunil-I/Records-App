<!DOCTYPE html>
  <html lang="en">
    <head>
      <meta charset="utf-8" />
      <meta
        name="viewport"
        content="width=device-width, initial-scale=1, shrink-to-fit=no"
      />
      <meta name="description" content="data-driven full-stack web-application" />
      <title>Accounts</title>
      <!-- Bootstrap core CSS -->
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
  </head>
   <body>
      <%- include("../common/header"); -%>
      <div class="container">
      <div class="row col-md-12 col-md-offset-2 custyle mx-auto">
         <h1 class="mx-auto">Transactions</h1>
      
         <table class="table table-striped">
            <thead>
               <tr>
                  <th>Name</th>
                  <th>Type</th>
                  <th>Amount</th>
                  <th>Balance</th>
                  <th>Transaction Date</th>
                  <th>Action</th>
               </tr>
               <%  
                  transactions.forEach(trans => {
                    
                  %>
               <tr>
                  <td><%=  trans.account_name %> (<%= trans.account_id %>)</td>
                  <td><%=  trans.type  %></td>
                  <td>&#163;<%=  trans.amount  %></td>
                  <td>&#163;<%=  trans.balance  %></td>
                  <td><%=  trans.transaction_date.toLocaleDateString('en-GB') %></td>
                  <td ><a href="/transactions/edit/<%= trans.transaction_id %>" class='btn btn-info btn-xs'><span class="glyphicon glyphicon-edit"></span> Edit</a> 
                     <a  href="/transactions/delete/<%= trans.transaction_id %>" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span> Delete</a>
                     <a  href="/transactions/?page=0&id=<%= trans.account_id %>" class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-remove"></span> Filter</a>
                  </td>
               </tr>
               <%  
                  });
                  %>
            </thead>
         </table>
      </div>
      <%- include("../common/pagination") -%>
      <%- include("../common/footer") -%>
   </body>
</html>