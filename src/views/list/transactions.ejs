<!DOCTYPE html>
  <html lang="en">
    <head>
      <meta charset="utf-8" />
      <meta
        name="viewport"
        content="width=device-width, initial-scale=1, shrink-to-fit=no"
      />
      <meta name="description" content="data-driven full-stack web-application" />
      <title>Accounts</title>
      <!-- Bootstrap core CSS -->
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
  </head>
   <body>
      <%- include("../common/header"); -%>
      <div class="container">
      <div class="row col-md-12 col-md-offset-2 custyle mx-auto">
         <h1 class="mx-auto">Transactions</h1>
      
         <table class="table table-striped">
            <thead>
               <tr>
                  <th>Name</th>
                  <th>Type</th>
                  <th>Amount</th>
                  <th>Balance</th>
                  <th>Transaction Date</th>
                  <th>Action</th>
               </tr>
               <%  
                  transactions.forEach(trans => {
                    
                  %>
               <tr>
                  <td><%=  trans.account_name %> (<%= trans.account_id %>)</td>
                  <td><%=  trans.type  %></td>
                  <td>&#163;<%=  trans.amount  %></td>
                  <td>&#163;<%=  trans.balance  %></td>
                  <td><%=  trans.transaction_date.toLocaleDateString('en-GB') %></td>
                  <td>
                     <span class="inline-flex"><a href="/transactions/?page=0&id=<%= trans.account_id %>"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" aria-labelledby="search" role="presentation" class="fill-current absolute search-icon-center ml-3 text-70"><path fill-rule="nonzero" d="M14.32 12.906l5.387 5.387a1 1 0 0 1-1.414 1.414l-5.387-5.387a8 8 0 1 1 1.414-1.414zM8 14A6 6 0 1 0 8 2a6 6 0 0 0 0 12z"></path></svg></a></span>
                     <span class="inline-flex"><a href="/transactions/delete/<%= trans.transaction_id %>"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" aria-labelledby="delete" role="presentation" class="fill-current"><path fill-rule="nonzero" d="M6 4V2a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2h5a1 1 0 0 1 0 2h-1v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V6H1a1 1 0 1 1 0-2h5zM4 6v12h12V6H4zm8-2V2H8v2h4zM8 8a1 1 0 0 1 1 1v6a1 1 0 0 1-2 0V9a1 1 0 0 1 1-1zm4 0a1 1 0 0 1 1 1v6a1 1 0 0 1-2 0V9a1 1 0 0 1 1-1z"></path></svg></a></span>
                  </td>
               </tr>
               <%  
                  });
                  %>
            </thead>
         </table>
      </div>
      </div>
      <%- include("../common/pagination") -%>
      <%- include("../common/footer") -%>
   </body>
</html>