<!DOCTYPE html>
  <html lang="en">
    <head>
      <meta charset="utf-8" />
      <meta
        name="viewport"
        content="width=device-width, initial-scale=1, shrink-to-fit=no"
      />
      <meta name="description" content="data-driven full-stack web-application" />
      <title>Accounts</title>
      <!-- Bootstrap core CSS -->
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" media="print" onload="this.media='all'; this.onload=null;">
  </head>
   <body>
      <%- include('common/header'); -%>
      <div class="container">
      <div class="row col-md-12 col-md-offset-2 custyle mx-auto">
         <h1 class="mx-auto">Accounts</h1>
      
         <table class="table table-striped">
            <thead>
               <tr>
                  <th>Name</th>
                  <th>Account Number</th>
                  <th>Account Sort Code</th>
                  <th>Balance</th>
                  <th>Action</th>
               </tr>
               <%  
                  accounts.forEach(acc => {
                    
                  %>
               <tr>
                  <td><%=  acc.name  %></td>
                  <td><%=  acc.accountno  %></td>
                  <td><%=  acc.sortcode  %></td>
                  <td>&#163;<%=  acc.balance  %></td>
                  <td ><a href="/accounts/edit/<%= acc.account_id %>" class='btn btn-info btn-xs'><span class="glyphicon glyphicon-edit"></span> Edit</a> 
                     <a  href="/accounts/delete/<%= acc.account_id %>" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span> Delete</a>
                  </td>
               </tr>
               <%  
                  });
                  %>
            </thead>
         </table>
      </div>
      <%- include("common/pagination") -%>
      <%- include('common/footer') -%>
   </body>
</html>